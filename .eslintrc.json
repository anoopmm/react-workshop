{
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "extends": "airbnb",

  "rules": {
    "import/no-unresolved": [2, { "ignore": [".png$", ".webp$", ".jpg$"] }],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prefer-stateless-function": 0,
    "linebreak-style": 0,
    "react/no-unescaped-entities": 0,
    "object-curly-newline": "off",
    "arrow-parens": 0
  }
}
